<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/car_notifications_from_client"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/cardview_dark_background"

        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/tv_text"
                        android:textColor="@color/blanco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Esperando que un Conductor Acepte tu Viaje!"
                        android:textSize="25sp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/progressBar"
                        android:layout_toEndOf="@+id/progressBar"
                        android:layout_alignParentBottom="true"></TextView>

        </RelativeLayout>


    </android.support.v7.widget.CardView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp">




    </LinearLayout>
    <TextView
        android:id="@+id/smsDialog"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="Presiona para Cancelar!"
        android:textColor="#fff"
        android:textStyle="bold" />


    <Button
        android:id="@+id/car_notifications_cancel_client"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:background="@drawable/circle_btn_red"
        android:paddingTop="5dp"
        android:text="X"
        android:textColor="#fff"
        app:layout_anchorGravity="bottom" />

</LinearLayout>