<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apreciasoft.mobile.intercarremis.Activity.MainActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo"
        android:alpha=".85" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_face_client"
            android:layout_width="130dp"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo"
            app:civ_fill_color="@color/blanco"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp" />


            <EditText
                android:id="@+id/user_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.06"
                android:background="@color/blanco"
            android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
                android:drawablePadding="10dp"
                android:hint=" Usuario/Email"
                android:inputType="textEmailAddress"
            android:padding="7dp"
            android:textColorLink="@color/blue" />


            <EditText
                android:id="@+id/pass_text"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:layout_width="match_parent"
                android:background="@color/blanco"
                android:padding="7dp"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColorLink="@color/blue"
                android:layout_weight="0.07" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_alignEnd="@+id/pass_text"
            android:layout_alignLeft="@+id/pass_text"
            android:layout_alignRight="@+id/pass_text"
            android:layout_alignStart="@+id/pass_text"
            android:layout_below="@+id/pass_text"
            android:layout_marginTop="31dp"
            android:layout_weight="0.04"
            android:background="@drawable/buton_round_primary"
            android:text="Iniciar"
            android:textColor="@color/whithe"
            app:backgroundTint="@color/colorPrimary" />





    </LinearLayout>


    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView2"
        android:layout_marginBottom="-5dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_newacount"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_height="41dp"
            android:layout_weight="1.0"
            android:layout_alignEnd="@+id/pass_text"
            android:layout_alignLeft="@+id/pass_text"
            android:layout_alignRight="@+id/pass_text"
            android:layout_alignStart="@+id/pass_text"
            android:layout_below="@+id/pass_text"
            android:layout_marginTop="5dp"
            android:background="@drawable/buton_round_withe"
            android:text="Registar"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="1dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_newacount2"
            android:layout_height="41dp"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_alignEnd="@+id/pass_text"
            android:layout_alignLeft="@+id/pass_text"
            android:layout_alignRight="@+id/pass_text"
            android:layout_alignStart="@+id/pass_text"
            android:layout_below="@+id/pass_text"
            android:layout_marginTop="5dp"
            android:background="@drawable/buton_round_withe"
            android:text="Recuperar Clave"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="1dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="75dp"
        app:srcCompat="@mipmap/amazon" />

    <TextView
        android:id="@+id/lbl_version"
        android:layout_margin="5dp"
        android:textColor="@color/blanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:text="0.0.0" />


</RelativeLayout>

