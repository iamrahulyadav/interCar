<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <android.support.v7.widget.CardView
        android:id="@+id/car_notifications"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                    <TextView
                android:id="@+id/tv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="string"
                android:textColor="@color/blueDark"
                android:textStyle="bold"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/separator"
                android:layout_below="@+id/tv_text"
                android:background="@android:color/darker_gray" />





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                android:layout_below="@+id/separator"
                android:maxLines="3"
                android:padding="8dp"
                android:id="@+id/tv_blah3"
                android:textColor="#666"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                android:layout_below="@+id/tv_blah3"
                android:maxLines="3"
                android:padding="8dp"
                android:id="@+id/tv_blah"
                android:textColor="#666"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_blah2"
                android:layout_below="@+id/tv_blah"
                        android:layout_width="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                        android:layout_height="wrap_content"
                android:textColor="#666"
                android:textSize="14dp"></TextView>







            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_blah2">


                <RelativeLayout
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">



                    <TextView
                        android:id="@+id/img_statsok"
                android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:textAlignment="center"
                        android:visibility="invisible"
                        android:background="@color/succes"
                        android:textColor="@color/whithe"
                        android:textSize="15dp"></TextView>

                    <TextView
                        android:id="@+id/img_statsfail"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:visibility="invisible"
                        android:background="@color/danger"
                        android:textColor="@color/whithe"
                        android:textSize="15dp"></TextView>








                </RelativeLayout>




            </LinearLayout>








        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>